@model IEnumerable<QuizeManagement.Models.ViewModels.RegisterModel>

@{
    ViewBag.Title = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


<h2 class="text-center bg-dark text-white p-3">My Information</h2>


<p>
    @Html.ActionLink("Home Page", "Index","Student",null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.Created_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Updated_at)
        </th>

        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
   
    
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Created_at)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Updated_at)
    </td>

    <td>
        @Html.ActionLink("Update", "Edit", new { id = item.User_id }, htmlAttributes: new { @class = "btn btn-success" }) 
        @Html.ActionLink("Details", "Details", new { id = item.User_id }, htmlAttributes: new { @class = "btn btn-primary" }) 
       @* @Html.ActionLink("Delete", "Delete", new { id = item.User_id })*@
    </td>
    
</tr>
    }

</table>
