@model QuizeManagement.Models.DbContext.User_Table

@{
    ViewBag.Title = "Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="container">
    <h2 class="mt-3">User Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Username:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
            </dl>
        </div>

        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Created at:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Created_at)</dd>

                <dt class="col-sm-4">Updated at:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Updated_at)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.User_id }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Back to List", "Index","User_Table",null, new { @class = "btn btn-secondary" })
    </div>
</div>
