@{
    ViewBag.Title = "Quiz Complete";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- Include Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Quiz Complete</h2>
                        <p class="card-text">Your score is: @ViewBag.Score</p>
                        <p class="card-text">Grade: @GetGrade((int)ViewBag.Score)</p>
                        <a href="@Url.Action("Index", "Student")" class="btn btn-primary">Return Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

@functions {
    public string GetGrade(int score)
    {
        if (score >= 40)
        {
            return "A";
        }
        else if (score >= 30)
        {
            return "B";
        }
        else if (score >= 25)
        {
            return "C";
        }
        else
        {
            return "Fail";
        }
    }
}
